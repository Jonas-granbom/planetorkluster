apiVersion: apps/v1
kind: Deployment
metadata:
  name: planetor-app
  namespace: planetor
  labels:
    app: site2
spec:
  replicas: 1
  selector:
    matchLabels:
      app: planetor-app
  template:
    metadata:
      labels:
        app: planetor-app
    spec:
      containers:
        - name: planetor-app
          image: git.systementor.se/jonas.granbom/planetor-app
          ports:
            - containerPort: 3000
---
apiVersion: v1
kind: Service
metadata:
  namespace: planetor
  name: planetor-app-service
  labels:
    app: planetor-app
spec:
  type: ClusterIP
  ports:
    - name: http
      port: 80
      protocol: TCP
      targetPort: 3000
  selector:
    app: planetor-app
  sessionAffinity: None
