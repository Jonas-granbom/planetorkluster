apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  namespace: planetor
  name: sites
  annotations:
    kubernetes.io/ingress.class: nginx
spec:
  rules:
    - host: "planetor.strangled.net"
      http:
        paths:
          - pathType: Prefix
            path: "/"
            backend:
              service:
                name: planetor-reborn-service
                port:
                  number: 80